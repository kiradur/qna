= form_with model: question, local: true, class: 'm-5' do |f|
  div.question-errors
    = render 'shared/errors', resource: question
  .field.form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .field.form-group
    = f.label :body
    = f.text_field :body, class: 'form-control'
  .field.form-group
    = f.label :files
    = f.file_field :files, multiple: true, direct_upload: true, class: 'form-control-file'
  .badge
    h5 Badge:
    = f.fields_for :badge do |r|
      .field.form-group
        = r.label :name
        = r.text_field :name, class: 'form-control'
      .field.form-group
        = r.label :image
        = r.file_field :image, direct_upload: true, class: 'form-control-file'
  = render 'shared/links_form', form: f
  = f.submit 'Ask', class: 'btn btn-primary'
